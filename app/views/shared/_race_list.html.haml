.row.race-list
  .col-md-12
    %ol.list-unstyled
      - @races.each do |race|
        %li
          .race
            .race-owner
              = link_to image_tag(race.user.image_url, class: 'avatar'), race.user.username
              = link_to race.user.username, race.user.username, class: 'username'
            .race-detail
              %h2.title= link_to race.title, race
              - if sign_in?
                %p= vote_button(race, 1)
                %p= vote_button(race, 2)
              - else
                %p= race.candidate_1
                %p= race.candidate_2
      = paginate(@races)

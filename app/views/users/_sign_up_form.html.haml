= form_for @user do |f|
  - if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.text_field :name, placeholder: "Pick a username", class: 'form-control'
  .form-group
    = f.text_field :email, placeholder: "Your email", class: 'form-control'
  .form-group
    = f.submit 'Sign up for Vote', class: 'btn btn-success'

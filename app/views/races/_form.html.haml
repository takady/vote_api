= form_for @race do |f|
  - if @race.errors.any?
    #error_explanation
      %h2= "#{pluralize(@race.errors.count, "error")} prohibited this race from being saved:"
      %ul
        - @race.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.text_field :title, placeholder: 'Race Title', class: 'form-control'
  .form-group
    = f.text_field :candidate_1, placeholder: 'First Lane', class: 'form-control'
  .form-group
    = f.text_field :candidate_2, placeholder: 'Second Lane', class: 'form-control'
  .form-group
    = f.text_field :expired_at, placeholder: 'Expired Time', class: 'form-control', id: 'datetimepicker4'
  .form-group
    = f.submit 'Start race', class: 'btn btn-primary'

:javascript
  $(function () {
    $('#datetimepicker4').datetimepicker({format: 'YYYY-MM-DD HH:mm:ss', sideBySide: true});
  });

= form_for @user do |f|
  - if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.text_field :username, placeholder: "Pick a username", class: 'form-control'
  .form-group
    = f.text_field :fullname, placeholder: "Your name", class: 'form-control'
  .form-group
    = f.text_field :email, placeholder: "Your email", class: 'form-control'
  .form-group
    = f.text_field :image_url, placeholder: "Your image url", class: 'form-control'
  .form-group
    = f.text_area :description, rows: 4, placeholder: "Introduce yourself", class: 'form-control'
  .form-group
    = f.submit 'Edit', class: 'btn btn-success'
